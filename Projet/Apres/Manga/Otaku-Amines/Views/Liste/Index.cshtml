@model Otaku_Amines.Models.ListeViewModels
@{
    ViewBag.Title = "Index";
}



@{ 

    foreach (var list in Model.ListAnimes)
    {
        <div class="card mb-3" style="max-width: 1000px; margin:5em">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="~/image/@list.Image" class="card-img image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h1 class="card-title"> @Html.ActionLink(@list.Nom, "Streaming", "Steaming", new { Nom = @list.Nom, Chiffre = 0 }, null) </h1>
                        <p class="card-text">@list.Genres</p>
                        <p class="card-text"><small class="text-muted">@list.Synopsis</small></p>
                    </div>
                </div>
            </div>
        </div>

    }
    using (Html.BeginForm("ButtonPressed", "Liste", FormMethod.Post))
    {
        <h3 class="text-center">
            <input type="submit" name="magicButton" value="0" />
